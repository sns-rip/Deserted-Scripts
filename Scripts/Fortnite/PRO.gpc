int angle_Out;          
function atan2(y, x) {  
  if (x >= 0 && y > 0) angle_Out = -90;  
  else if (x  < 0 && y >= 0) angle_Out = 90; 
  else if (x <= 0 && y < 0) angle_Out = -270; 
  else angle_Out = 270;                       
                                              
  x = abs(x);                                 
  y = abs(y);                                 
                                              
  if (x < y) angle_Out += (x * 45 / y);       
  else if (x > y) angle_Out += 90 - (y * 45 / x); 
  else angle_Out += 45;                           
                                                  
  angle_Out = abs(angle_Out % 360);               
                                                  
  return (angle_Out);                             
}                                                 
